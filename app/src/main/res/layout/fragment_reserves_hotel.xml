<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nombre del hotel -->
        <TextView
            android:id="@+id/tvHotelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Ubicación -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/outline_location_on_24"
            app:layout_constraintTop_toBottomOf="@id/tvHotelName"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Imagen del hotel -->
        <ImageView
            android:id="@+id/imageHotel"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@color/light_grey"
            app:layout_constraintTop_toBottomOf="@id/tvLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Selección de fecha de inicio -->
        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Seleccionar fecha"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/imageHotel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Selección de fecha final -->
        <EditText
            android:id="@+id/etEndDate"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Seleccionar fecha final"
            android:focusable="false"
            android:clickable="true"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etStartDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Número de personas -->
        <EditText
            android:id="@+id/etGuests"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="Número de personas"
            android:inputType="number"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etEndDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Botón de reservar -->
        <Button
            android:id="@+id/btnReserve"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="Reservar"
            android:textColor="@android:color/black"
            android:background="@color/light_green"
            app:layout_constraintTop_toBottomOf="@id/etGuests"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
