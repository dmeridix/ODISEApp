<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="#F5F5F5"> <!-- Fondo igual que la tarjeta de perfil -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Contenido de la reserva -->
        <LinearLayout
            android:id="@+id/layout_textos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tipo_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1E88E5" />

            <TextView
                android:id="@+id/tv_nombre_lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del lugar"
                android:textSize="14sp"
                android:textColor="#212121"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_fecha_reserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- BotÃ³n alineado a la derecha -->
        <Button
            android:id="@+id/btn_cancelar_reserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#D32F2F"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
